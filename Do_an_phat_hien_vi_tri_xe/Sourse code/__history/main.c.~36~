#include <main.h>

//khai bao ket noi cac sensor
#define sensor1     input(PIN_A0)
#define sensor2     input(PIN_A1)
#define sensor3     input(PIN_A2)
#define sensor4     input(PIN_A3)
#define sensor5     input(PIN_B0)
#define sensor6     input(PIN_B1)


//------------------- variable--------------
unsigned int value_in,result;
char str[30];
#INT_EXT
void  EXT_isr(void) 
{
if(sensor5==0)
   {
      //delay_ms(100);
      value_in++;
      
      /*
   if(value_in=65535)
   {
      value_in=0;
   }
   */
   }

}

#INT_EXT1
void  EXT1_isr(void) 
{
if(sensor6==0)
   {
      //delay_ms(100);
     
      value_in--;
       
      if(value_in==0)
      {
      value_in=0;
      }
      /*
     if(value_out=65535)
   {
      value_out=0;
   }
   */
   }
}
#define LCD_ENABLE_PIN PIN_C7
#define LCD_RS_PIN PIN_C5
#define LCD_RW_PIN PIN_C6
#define LCD_DATA4 PIN_D7
#define LCD_DATA5 PIN_D6
#define LCD_DATA6 PIN_D5
#define LCD_DATA7 PIN_D4

#include <lcd.c>

void lcd_clear(void)
{
   lcd_gotoxy(1,1);
   lcd_putc('\f');
}

void main()
{

   set_tris_a (0x0f);
   set_tris_b (0x03);
   enable_interrupts(INT_EXT);
   enable_interrupts(INT_EXT_H2L);
   enable_interrupts(INT_EXT1);
   enable_interrupts(INT_EXT1_H2L);
   enable_interrupts(GLOBAL);

   lcd_init();

   lcd_putc("CHUONG TRINH DEM SO XE");
   delay_ms(1000);
   lcd_clear();
   while(TRUE)
   {
   //TODO: User Code
   result=value_in;
   if(result==0)
   {
   result=0;
   value_in=0;
   }
        sprintf(str,"Soxe");         
        lcd_gotoxy(1,1);
        printf(lcd_putc,"%s",str); 
        sprintf(str,"%d",result);         
        lcd_gotoxy(1,2);
        printf(lcd_putc,"%s",str); 
        // showw P1
         sprintf(str,"P1");         
        lcd_gotoxy(6,1);
        printf(lcd_putc,"%s",str); 
        //show P2
        sprintf(str,"P2");         
        lcd_gotoxy(9,1);
        printf(lcd_putc,"%s",str); 
        
         //show P3
        sprintf(str,"P3");         
        lcd_gotoxy(12,1);
        printf(lcd_putc,"%s",str); 
        
          //show P4
        sprintf(str,"P4");         
        lcd_gotoxy(15,1);
        printf(lcd_putc,"%s",str); 
        if(sensor1==0)
        {
        sprintf(str,"x");         
        lcd_gotoxy(6,2);
        printf(lcd_putc,"%s",str); 
        }
        else
        {
        sprintf(str," ");         
        lcd_gotoxy(6,2);
        printf(lcd_putc,"%s",str); 
        }
        if(sensor2==0)
        {
        sprintf(str,"x");         
        lcd_gotoxy(9,2);
        printf(lcd_putc,"%s",str); 
        }
        else
        {
        sprintf(str," ");         
        lcd_gotoxy(9,2);
        printf(lcd_putc,"%s",str); 
        }
         
         if(sensor3==0)
        {
        sprintf(str,"x");         
        lcd_gotoxy(12,2);
        printf(lcd_putc,"%s",str); 
        }
        else
        {
        sprintf(str," ");         
        lcd_gotoxy(12,2);
        printf(lcd_putc,"%s",str); 
        }
        
         if(sensor4==0)
        {
        sprintf(str,"x");         
        lcd_gotoxy(15,2);
        printf(lcd_putc,"%s",str); 
        }
        else
        {
        sprintf(str," ");         
        lcd_gotoxy(15,2);
        printf(lcd_putc,"%s",str); 
        }
   }

}
